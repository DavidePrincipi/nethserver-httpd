
#
# 10directory_begin -- basic ibay directory setup
#
<Directory {$Path}>
    Options None
    Options +Indexes
    Options +Includes
{      
	if($Access eq 'private') {
	    my $access = join(" \\\n        ", split(' ', $PrivateAllow));
	    $OUT = <<ACCESS
    Order Deny,Allow
    Deny from all
    Allow from $access
ACCESS
	} else {
	    $OUT = '';
	}

	if($PasswordStatus eq 'enabled') {
	    my $authName = $Description || $Name;
	    $OUT .= <<PASSWORD
    AuthType Basic
    AuthName "$authName"
    AuthUserFile conf/ibays.htpasswd
    Require user $Name
PASSWORD
	}

     $OUT;
}


